<?xml version='1.0' encoding='utf-8'?>
<widget
        id="com.scowalt.newlegacyincapp"
        version="1.1.1"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:gap="http://phonegap.com/ns/1.0" >
    <name>newLEGACYinc</name>
    <description>
        The official mobile application of newLEGACYinc!
    </description>
    <author email="me@scowalt.com">
        Scott Walters
    </author>

    <!-- Home page -->
    <content src="index.html" />

    <access origin="*"/>
    <preference name="BackupWebStorage" value="local" />

    <!-- Application Icons -->
    <platform name="android">
        <icon src="icons/android.png" density="ldpi" />
        <icon src="icons/android.png" density="mdpi" />
        <icon src="icons/android.png" density="hdpi" />
        <icon src="icons/android.png" density="xhdpi" />
    </platform>
    <icon src="icons/ios/ios-152.png" gap:platform="ios" width="152" height="152"/>
    <icon src="icons/ios/ios-120.png" gap:platform="ios" width="120" height="120"/>
    <icon src="icons/ios/ios-76.png" gap:platform="ios" width="76" height="76"/>
    <icon src="icons/ios/ios-72.png" gap:platform="ios" width="72" height="72"/>
    <icon src="icons/ios/ios-57.png" gap:platform="ios" width="57" height="57"/>


    <!-- Splash Screen Images -->
    <platform name="android">
        <!-- you can use any density that exists in the Android project -->
        <splash src="splash/android/images/res-long-land-hdpi/default.png" density="land-hdpi"/>
        <splash src="splash/android/images/res-long-land-ldpi/default.png" density="land-ldpi"/>
        <splash src="splash/android/images/res-long-land-mdpi/default.png" density="land-mdpi"/>
        <splash src="splash/android/images/res-long-land-xhdpi/default.png" density="land-xhdpi"/>
        <splash src="splash/android/images/res-long-port-hdpi/default.png" density="port-hdpi"/>
        <splash src="splash/android/images/res-long-port-ldpi/default.png" density="port-ldpi"/>
        <splash src="splash/android/images/res-long-port-mdpi/default.png" density="port-mdpi"/>
        <splash src="splash/android/images/res-long-port-xhdpi/default.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <!-- images are determined by width and height. The following are supported -->
        <splash src="splash/iphone/Default.png" width="320" height="480"/>
        <splash src="splash/iphone/Default@2x.png" width="640" height="960"/>
        <splash src="splash/iphone/Default-Portrait.png" width="768" height="1024"/>
        <splash src="splash/iphone/Default-Portrait@2x.png" width="1536" height="2048"/>
        <splash src="splash/iphone/Default-Landscape.png" width="1024" height="768"/>
        <splash src="splash/iphone/Default-Landscape@2x.png" width="2048" height="1536"/>
        <splash src="splash/iphone/Default-568h@2x.png" width="640" height="1136"/>
        <splash src="splash/iphone/Default-667h@2x.png" width="750" height="1334"/>
        <splash src="splash/iphone/Default-Portrait-736h@3x.png" width="1242" height="2208"/>
        <splash src="splash/iphone/Default-Landscape-736h@3x.png" width="2208" height="1242"/>
    </platform>

    <!-- Splash Screen config -->
    <!-- Honestly much of this may be redundant, there's conflicting information about this -->
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="ios-package" value="CDVSplashScreen" />
        <param name="onload" value="false" />
        <param name="AutoHideSplashScreen" value="false" />
    </feature>
    <!-- Name of image to use for splash -->
    <preference name="SplashScreen" value="screen" />
    <!-- Don't auto-hide splash on iOS (hide programatically) -->
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="auto-hide-splash-screen" value="false" />

    <!-- Light StatusBar on iOS -->
    <preference name="StatusBarStyle" value="lightcontent" />

    <!-- Prevent overscroll on iOS -->
    <!-- http://stackoverflow.com/q/16274074/1222411 -->
    <preference name="DisallowOverscroll" value="true" />

    <!-- Plugins -->
    <gap:plugin name="org.apache.cordova.device" version="~0.2"/>
    <gap:plugin name="org.apache.cordova.splashscreen"/>
    <gap:plugin name="com.phonegap.plugins.PushPlugin" version="~2.4"/>
    <gap:plugin name="org.apache.cordova.inappbrowser"/>
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
